@model WebFilm2015.Models.Param

@section scripts{
    <link href="~/Content/handsontable/handsontable.css" rel="stylesheet" type="text/css" />
    <script src="http://docs.handsontable.com/pro/1.5.0/bower_components/numbro/dist/numbro.js"></script>
    <script src="~/Scripts/ZeroClipboard.js" type="text/javascript"></script>
    <script src="~/Scripts/Pikaday/pikaday.js" type="text/javascript"></script>
    <script src="~/Scripts/moment.js" type="text/javascript"></script>
    <script src="~/Scripts/handsontable/handsontable.js" type="text/javascript"></script>
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.10.0.js"></script>
    <script src="~/Scripts/ReportScript.js"></script>
}

<div>
    <br/>
    <br/>
    <div class="row">
        <div class="col-sm-2 text-lg-left">@Html.LabelFor(m => m.BeginDate)</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.TextBoxFor(m => m.BeginDate, Model.BeginDate.ToShortDateString(), new {@class = "date-picker"})</div>
    </div>
    <br/>
    <div class="row">
        <div class="col-sm-2 text-lg-left">@Html.LabelFor(m => m.EndDate)</div>
    </div>
    <div class="row">
        <div class="col-sm-2 text-lg-left">@Html.TextBoxFor(m => m.EndDate, Model.EndDate.ToShortDateString(), new {@class = "date-picker"})</div>
    </div>
    <br/>
    <div class="row">
        <div class="col-sm-2 text-lg-left"><input type='button' id="submit" value="Отправить"/>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-sm-2 text-lg-left">
            @Html.ActionLink("Report (Excel)", "DownloadReport", "Report", new { beginDate = Model.BeginDate, endDate = Model.EndDate }, new { id = "download", @class = "link" })
        </div>
    </div>
    <br />
    <div id="dataTable"></div>
</div>


